<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectmpt.projectmpt.ListTransportDetailActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_transport"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />


    <TextView
        android:id="@+id/headingDetail_transport"
        android:layout_width="wrap_content"
        android:text="Heading"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/text_marginLeft"
        app:layout_constraintTop_toBottomOf="@id/toolbar_transport"
        android:paddingTop="@dimen/text_marginTop"
        android:paddingBottom="@dimen/text_marginBottom"
        style="@style/headerText" />

    <TextView
        android:id="@+id/distanceDetail_transport"
        android:layout_width="wrap_content"
        android:text="2.6 miles"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_transport"
        android:paddingRight="@dimen/text_marginRight"
        android:paddingTop="@dimen/text_marginTop"
        android:paddingBottom="@dimen/text_marginBottom"
        style="@style/standardText" />

    <TextView
        android:id="@+id/descriptionDetail_transport"
        android:text="email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headingDetail_transport"
        android:paddingLeft="@dimen/text_marginLeft"

        android:paddingBottom="@dimen/text_marginBottom"
        style="@style/standardText"
        />

    <Button
        android:id="@+id/cmdTransport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Button"
        android:elevation="1dp"
        android:onClick="transportItem"
        android:text="Provide this item"
        android:paddingLeft="@dimen/text_marginLeft"
        android:paddingRight="@dimen/text_marginRight"
        android:textAppearance="@style/standardText"
        android:textColor="@color/colorwhite"
        android:background="@color/colortoolbarbackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionDetail_transport" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigationDetail_transport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemBackground="@color/colortoolbarbackground"
        app:itemIconTint="@color/colorwhite"
        app:itemTextColor="@color/colorwhite"
        app:menu="@menu/bottomnav_menu"
        />

</android.support.constraint.ConstraintLayout>