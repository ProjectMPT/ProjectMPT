<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectmpt.projectmpt.ListTransportDetailActivity">



    <TextView
        android:id="@+id/headingDetail_transport"
        android:layout_width="wrap_content"
        android:text="Heading"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/text_marginLeft"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/text_marginTop"
        android:paddingBottom="@dimen/text_marginBottom"
        style="@style/headerText" />

    <TextView
        android:id="@+id/distanceDetail_transport"
        android:layout_width="wrap_content"
        android:text="2.6 miles"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="@dimen/text_marginRight"
        android:paddingTop="@dimen/text_marginTop"
        android:paddingBottom="@dimen/text_marginBottom"
        style="@style/standardText" />

    <TextView
        android:id="@+id/descriptionDetail_transport"
        android:text="email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headingDetail_transport"
        android:paddingLeft="@dimen/text_marginLeft"

        android:paddingBottom="@dimen/text_marginBottom"
        style="@style/standardText"
        />

    <Button
        android:id="@+id/cmdSaveTransport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Button"
        android:elevation="1dp"
        android:onClick="transportItem"
        android:text="Provide this item"
        android:paddingLeft="@dimen/text_marginLeft"
        android:paddingRight="@dimen/text_marginRight"
        android:textAppearance="@style/standardText"
        android:textColor="@color/colorwhite"
        android:background="@color/colortoolbarbackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionDetail_transport" />

    <Button
        android:id="@+id/cmdDelivered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Button"
        android:elevation="1dp"
        android:onClick="itemDelivered"
        android:text="Mark as Delivered"
        android:paddingLeft="@dimen/text_marginLeft"
        android:paddingRight="@dimen/text_marginRight"
        android:textAppearance="@style/standardText"
        android:textColor="@color/colorwhite"
        android:background="@color/colortoolbarbackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/descriptionDetail_transport" />

    <Button
        android:id="@+id/cmdCancelTransport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:elevation="1dp"
        android:onClick="cancelTransport"
        android:text="Cancel"
        android:textAppearance="@style/standardText"
        android:textColor="@color/colorwhite"
        android:background="@color/colortoolbarbackground"
        app:layout_constraintEnd_toStartOf="@+id/cmdSaveTransport"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cmdSaveTransport"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

</android.support.constraint.ConstraintLayout>