<?xml version="1.0" encoding="utf-8"?>

<!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackgroundteal"
    tools:context="com.projectmpt.projectmpt.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />


    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Helping Humans Help Humans"
        android:textAlignment="center"
        android:textAppearance="@style/subtitleText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        />



    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/text_marginBottom"
        android:paddingLeft="@dimen/text_marginLeft"
        android:paddingRight="@dimen/text_marginRight"
        android:paddingTop="@dimen/text_marginTop"
        android:text="Please check your internet connectivity"
        android:textAlignment="center"
        android:textAppearance="@style/standardText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle" />


    <TextView
        android:id="@+id/tvNeeds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X Needs"
        android:textAppearance="@style/standardText"
        android:paddingLeft="@dimen/text_marginLeft"
        android:paddingRight="@dimen/text_marginRight"
        android:paddingTop="@dimen/text_marginTop"
        android:paddingBottom="@dimen/text_marginBottom"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

    <TextView
        android:id="@+id/tvNeedsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWelcome"
        android:layout_toRightOf="@id/tvNeeds"
        android:onClick="startList"
        android:paddingBottom="@dimen/text_marginBottom"
        android:paddingLeft="@dimen/text_marginLeft"
        android:paddingRight="@dimen/text_marginRight"
        android:paddingTop="@dimen/text_marginTop"
        android:text="List"
        android:textAppearance="@style/linkText"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        tools:layout_editor_absoluteX="186dp" />


    <TextView
        android:id="@+id/tvTransports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X Transport Requests"
        android:textAppearance="@style/standardText"
        android:paddingLeft="@dimen/text_marginLeft"
        android:paddingRight="@dimen/text_marginRight"
        android:paddingTop="@dimen/text_marginTop"
        android:paddingBottom="36dp"
        app:layout_constraintTop_toBottomOf="@id/tvNeeds" />

    <TextView
        android:id="@+id/tvTransportList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWelcome"
        android:layout_toRightOf="@id/tvNeeds"
        android:onClick="startTransport"
        android:paddingBottom="@dimen/text_marginBottom"
        android:paddingLeft="24dp"
        android:paddingRight="0dp"
        android:paddingTop="@dimen/text_marginTop"
        android:text="List"
        android:textAppearance="@style/linkText"
        app:layout_constraintTop_toBottomOf="@id/tvNeeds"
        tools:layout_editor_absoluteX="283dp" />


    <Button
        android:id="@+id/cmdShowMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Button"
         android:elevation="1dp"
        android:onClick="startMeet"
        android:text="+ Enter New Need"
        android:paddingLeft="@dimen/text_marginLeft"
        android:paddingRight="@dimen/text_marginRight"
        android:textAppearance="@style/standardText"
        android:textColor="@color/colorwhite"
        android:background="@color/colortoolbarbackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTransports" />


</android.support.constraint.ConstraintLayout>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_view" />

</android.support.v4.widget.DrawerLayout>

