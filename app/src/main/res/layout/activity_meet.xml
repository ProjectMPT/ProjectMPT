<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/meet_scroll"
    android:background="@color/colorbackground"
    >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorbackground"
        tools:context="com.projectmpt.projectmpt.MainActivity">

        <TextView
            android:id="@+id/contact_form_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/text_marginLeft"
            android:paddingRight="@dimen/text_marginRight"
            android:text="New Need"
            android:textAppearance="@style/standardText" />

        <EditText
            android:id="@+id/txtNeed"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:breakStrategy="balanced"
            android:fitsSystemWindows="true"
            android:gravity="top"
            android:hint="Please enter a detailed description of the request"
            android:inputType="textMultiLine"
            android:paddingLeft="@dimen/text_marginLeft"
            android:paddingRight="@dimen/text_marginRight"
            app:layout_constraintTop_toBottomOf="@id/contact_form_title" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.projectmpt.projectmpt.WorkaroundMapFragment"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toBottomOf="@id/txtNeed"
            tools:context=".MapLocationActivity"
               />

        <EditText
            android:id="@+id/txtLocation"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:breakStrategy="balanced"
            android:fitsSystemWindows="true"
            android:gravity="top"
            android:hint="Drag the marker as necessary and then provide further location details here"
            android:inputType="textMultiLine"
            android:paddingLeft="@dimen/text_marginLeft"
            android:paddingRight="@dimen/text_marginRight"
            app:layout_constraintTop_toBottomOf="@id/map" />


        <Button
            android:id="@+id/cmdFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:elevation="1dp"
            android:onClick="showTimePickerDialog"
            android:text="Time Needed"
            android:textAppearance="@style/standardText"
            app:layout_constraintEnd_toStartOf="@+id/cmdTo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtLocation"
            android:layout_marginTop="@dimen/activity_vertical_margin" />

        <Button
            android:id="@+id/cmdTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:elevation="1dp"
            android:onClick="showTimePickerDialog"
            android:text="Expires"
            android:textAppearance="@style/standardText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cmdFrom"
            app:layout_constraintTop_toBottomOf="@id/txtLocation"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <Button
            android:id="@+id/cmdCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="1dp"
            android:onClick="cancelNeed"
            android:text="Cancel"
            android:textAppearance="@style/standardText"
            android:textColor="@color/colorblack"
            app:layout_constraintEnd_toStartOf="@+id/cmdSave"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cmdFrom"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>


        <Button
            android:id="@+id/cmdSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="1dp"
            android:onClick="saveNeed"
            android:text="Save"
            android:textAppearance="@style/standardText"
            android:textColor="@color/colorblack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cmdCancel"
            app:layout_constraintStart_toEndOf="@+id/cmdCancel"
            app:layout_constraintTop_toBottomOf="@id/cmdFrom"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    </android.support.constraint.ConstraintLayout>

</ScrollView>