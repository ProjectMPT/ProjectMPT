<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/linearLayout"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_transport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:elevation="1dp"
        card_view:cardCornerRadius="2dp">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/cardmaintransport"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/heading_transport"
                android:layout_width="wrap_content"
                android:text="Heading"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/text_marginLeft"
                android:paddingTop="@dimen/text_marginTop"
                android:paddingBottom="@dimen/text_marginBottom"
                style="@style/headerText" />

            <TextView
                android:id="@+id/distance_transport"
                android:layout_width="wrap_content"
                android:text="2.6 miles"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingRight="@dimen/text_marginRight"
                android:paddingTop="@dimen/text_marginTop"
                android:paddingBottom="@dimen/text_marginBottom"
                style="@style/standardText" />


            <TextView
                android:id="@+id/description_timeleft"
                android:text="timeleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/distance_transport"
                android:paddingLeft="@dimen/text_marginLeft"
                android:paddingRight="@dimen/text_marginRight"
                android:paddingBottom="@dimen/text_marginBottom"
                style="@style/standardText"
                />

            <TextView
                android:id="@+id/description_transport"
                android:text="email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/heading_transport"
                android:paddingLeft="@dimen/text_marginLeft"

                android:paddingBottom="@dimen/text_marginBottom"
                style="@style/standardText"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>