<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#0022ee</item>

    </style>

    <style name="standardText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="linkText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorlinktext</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="headerText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="titleText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorwhite</item>
        <item name="android:fontFamily">@font/robotolight</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="subtitleText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorwhite</item>
        <item name="android:fontFamily">@font/robotolight</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorwhite</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
